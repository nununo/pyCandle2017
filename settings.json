{
    "environment": {
        "omxplayer_bin": "/usr/bin/omxplayer.bin",
        "ld_library_path": "/usr/lib/omxplayer"
    },
    "loglevel": "warn",
    "loglevels": {
        "txdbus": "warn",
        "player": "warn",
        "player.dbus": "warn",
        "player.mngr": "info",
        "player.proc": "warn",
        "player.each": "warn",
        "inputs": "warn",
        "inputs.network": "warn",
        "inputs.arduino": "warn",
        "inputs.arduino.serial": "warn",
        "inputs.arduino.proto": "warn"
    },
    "inputs": {
        "arduino": {
            "device_file": "/dev/ttyACM0",
            "baud_rate": 9600,
            "thresholds": [7, 20, 30]
        },
        "network": {
            "port": 10000
        }
    },
    "levels": {
        "0": {
            "folder": "../videos/0",
            "fadein": 1,
            "fadeout": 1
        },
        "1": {
            "folder": "../videos/1",
            "fadein": 0.1,
            "fadeout": 0.5
        },
        "2": {
            "folder": "../videos/2",
            "fadein": 1,
            "fadeout": 1
        },
        "3": {
            "folder": "../videos/3",
            "fadein": 1,
            "fadeout": 1
        }
    }
}
