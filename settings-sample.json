{
    "environment": {
        "dbus_daemon_bin": "/usr/bin/dbus-daemon",
        "omxplayer_bin": "/usr/bin/omxplayer.bin",
        "ld_library_path": "/usr/lib/omxplayer"
    },
    "loglevel": "warn",
    "loglevels": {
        "player": "warn",
        "player.dbus": "warn",
        "player.mngr": "warn",
        "player.proc": "warn",
        "player.each": "warn",
        "inputs": "warn",
        "inputs.agd": "warn",
        "inputs.arduino": "warn",
        "inputs.audio": "warn",
        "inputs.audio.proc": "warn",
        "inputs.hid": "warn",
        "inputs.hid.reader": "warn",
        "inputs.network": "warn",
        "inputs.web": "warn",
        "txdbus": "warn",
        "events": "warn"
    },
    "inputs": [
        {
            "type": "web",
            "enabled": true,
            "interface": "0.0.0.0",
            "port": 8080
        },
        {
            "type": "agd",
            "enabled": false,
            "buffer_size": 25,
            "thresholds": [7, 20, 30],
            "source": "arduino"
        },
        {
            "type": "arduino",
            "enabled": false,
            "device_file": "/dev/ttyACM0",
            "baud_rate": 9600
        },
        {
            "type": "audio",
            "enabled": false,
            "nice_bin": "/usr/bin/nice",
            "arecord_bin": "/usr/bin/arecord",
            "device": "hw:CARD=H2300,DEV=0",
            "channels": 2,
            "format": "S16_LE",
            "rate": 8000,
            "buffer_time": 200000,
            "respawn_delay": 1
        },
        {
            "type": "hid",
            "enabled": false,
            "device_file": "/dev/input/event0",
            "reading_event_code": "ABS_Y",
            "reading_scale": 1,
            "reading_offset": 0,
            "period": 0.1

        },
        {
            "type": "network",
            "enabled": false,
            "port": 10000
        }
    ],
    "levels": {
        "0": {
            "folder": "../videos/0",
            "fadein": 1,
            "fadeout": 1
        },
        "1": {
            "folder": "../videos/1",
            "fadein": 0.1,
            "fadeout": 0.5
        },
        "2": {
            "folder": "../videos/2",
            "fadein": 1,
            "fadeout": 1
        },
        "3": {
            "folder": "../videos/3",
            "fadein": 0,
            "fadeout": 1
        }
    }
}
